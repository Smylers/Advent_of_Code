#! /usr/bin/perl

# pot_count

use v5.14;
use warnings;
use List::AllUtils qw<sum>;

$_ = <> =~ /([#.]+)/ && $1 =~ tr/#./xo/r;
my $offset = 0;
my $rule = join '|', map { tr/#./xo/; /^(..)(.)(..)/; "(?<=$1)$2(?=$3)" } grep { /#$/ } <>;

for my $gen (1 .. 20)
{
  s/^(o{0,2})(?=x)/ooo/ and $offset -= 3 - length $1;
  s/(?<=x)o{0,2}$/ooo/;
  s/$rule/\u$&/gi;
  s/[ox]/o/g;
  s/[OX]/x/g;
}
say sum map { $offset++ * ($_ eq 'x') } split //;
